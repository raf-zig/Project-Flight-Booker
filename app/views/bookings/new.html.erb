<%= form_with model: @book do |f| %>
  
  <%= f.label :flight_id %>
  <%= f.text_field :flight_id, :value => @selected_flight %><br><br>
  <%= f.label :passenger_num %>
  <%= f.text_field :passenger_num, :value => @number_of_passengers %><br><br>
  
  <%= f.fields_for :passengers do |sub_form| %>
    <%= sub_form.label :name %>
    <%= sub_form.text_field :name %>

    <%= sub_form.label :email %>
    <%= sub_form.text_field :email %><br><br>
    <% end %>
  <%= f.submit %>
<% end %>
